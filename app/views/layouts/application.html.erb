<!DOCTYPE html>
<html>
  <head>
    <title>Super Endless Kingdom</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="flash"><%= flash.notice %></p>
    <%= yield %>
    <h6>
        <% if logged_in? %>
          <%= javascript_include_tag "phaser.min.js"%>
          <%= javascript_include_tag "typewriter.js"%>
          <%= javascript_include_tag "boot.js"%>
          <%= javascript_include_tag "preload.js"%>
          <%= javascript_include_tag "menu.js"%>
          <%= javascript_include_tag "credits.js"%>
          <%= javascript_include_tag "intro.js"%>
          <%= javascript_include_tag "city.js"%>
          <%= javascript_include_tag "main.js"%>
          <%= javascript_include_tag "shop.js"%>
          <%= javascript_include_tag "defence.js"%>
          <%= javascript_include_tag "game.js"%>
          <%= "Logged in as #{current_user.username}" %>
          <%= link_to "(logout)", logout_path %>
        <% else %>
          <%= link_to "(login)", login_path %>
        <% end %>
      </h6>
  </body>
</html>
